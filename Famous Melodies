tone(buzzerPin, 349, 500); delay(500);
tone(buzzerPin, 330, 500); delay(500);
tone(buzzerPin, 330, 500); delay(500);
tone(buzzerPin, 294, 500); delay(500);
tone(buzzerPin, 294, 500); delay(500);
tone(buzzerPin, 262, 1000); delay(1000);

